@model List<MenuItems>

<div class="container py-2 px-0">
    <div class="row">
        <div class="col-6">
            <h2 style="color: #FC8019;">
                Menu List
            </h2>
        </div>
        <div class="col-6 text-end align-content-center">
            <a asp-area="Admin" asp-controller="Menu" asp-action="CreateMenu" class="btn custom-btn-pumpkin">
                <i class="bi bi-plus-circle"></i> Create New Menu
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Menu Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td class="w-100 btn-group btn-group-radius" role="group">
                    <a asp-area="Admin" asp-controller="Menu" asp-action="EditMenu" asp-route-id="@obj.Id" class="btn custom-btn-black mx-2 rounded-2">
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>

                    <a asp-area="Admin" asp-controller="Menu" asp-action="DeleteMenu" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded-2">
                            <i class="bi bi-trash">Delete</i>
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
